extends layout

block content
  h1= title
  form(action='',method='post')
    div
      label(for='name') Name:
      input(type='text', name='name', id='name', placeholder='Name here...', required='')
    div
      label(for='lastName') Last Name:
      input(type='text', name='lastName', id='lastName', placeholder='Last Name here...', required='')
    div
      label(for='email') Email:
      input(type='email', name='email', id='email', placeholder='Email...', required='')
    div
      label(for='password') Password:
      input(type='password', name='password', id='password', placeholder='Password...', required='')
    div
      label(for='confirm') Confirm:
      input(type='password', name='confirm', id='confirm', placeholder='Confirm...', required='')
    div
      input(type='submit', value='Save')
    br
    -if(error){
    p Error to confirm password, please try again!
    -}
  style.
    form label { min-width: 80px; display: inline-block; }
    form > div { padding: 5px; }